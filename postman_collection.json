{
  "info": {
    "name": "Todo API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/"
      }
    },
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Buy groceries\",\n  \"description\": \"Milk, eggs, bread\"\n}"
        },
        "url": "{{baseUrl}}/tasks"
      }
    },
    {
      "name": "Get All Tasks",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/tasks"
      }
    },
    {
      "name": "Get Single Task",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/tasks/:id"
      }
    },
    {
      "name": "Update Task",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Buy groceries and fruits\",\n  \"completed\": true\n}"
        },
        "url": "{{baseUrl}}/tasks/:id"
      }
    },
    {
      "name": "Delete Task",
      "request": {
        "method": "DELETE",
        "url": "{{baseUrl}}/tasks/:id"
      }
    },
    {
      "name": "Cron - manual trigger",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/cron/trigger"
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" }
  ]
}
